    <script>
        // Sistema de Tracking de Acessos
        class AdminTracker {
            constructor() {
                this.stats = this.loadStats();
                this.initializeAdminCredentials();
            }

            // Credenciais do CEO (você pode alterar essas credenciais)
            initializeAdminCredentials() {
                if (!localStorage.getItem('excellentcv_admin_credentials')) {
                    const defaultCredentials = {
                        username: 'ceo01excellent',
                        password: '8m8fszS&LqnMB04'
                    };
                    localStorage.setItem('excellentcv_admin_credentials', JSON.stringify(defaultCredentials));
                }
            }

            // Carregar estatísticas
            loadStats() {
                const savedStats = localStorage.getItem('excellentcv_admin_stats');
                if (savedStats) {
                    return JSON.parse(savedStats);
                } else {
                    // Estatísticas iniciais
                    return {
                        totalUsers: 0,
                        activeToday: 0,
                        totalCVs: 0,
                        engagementRate: 0,
                        userGrowth: 0,
                        cvGrowth: 0,
                        activeChange: 0,
                        engagementChange: 0,
                        recentLogins: [],
                        hourlyAccess: this.generateHourlyData(),
                        regionalData: this.generateRegionalData()
                    };
                }
            }

            // Gerar dados por hora
            generateHourlyData() {
                const hours = [];
                for (let i = 0; i < 24; i++) {
                    hours.push({
                        hour: i,
                        count: Math.floor(Math.random() * 50) + 10
                    });
                }
                return hours;
            }

            // Gerar dados regionais
            generateRegionalData() {
                return [
                    { region: 'Maputo Cidade', percentage: 65, users: 650 },
                    { region: 'Maputo Província', percentage: 20, users: 200 },
                    { region: 'Gaza', percentage: 5, users: 50 },
                    { region: 'Sofala', percentage: 4, users: 40 },
                    { region: 'Outras', percentage: 6, users: 60 }
                ];
            }

            // Registrar novo login de usuário
            registerUserLogin(userData) {
                const now = new Date();
                const today = now.toISOString().split('T')[0];
                
                // Atualizar total de usuários
                this.stats.totalUsers++;
                
                // Verificar se já teve acesso hoje
                const todayLogins = this.stats.recentLogins.filter(login => 
                    login.date === today
                );
                
                if (todayLogins.length === 0) {
                    this.stats.activeToday++;
                }
                
                // Adicionar ao registro de logins recentes
                this.stats.recentLogins.unshift({
                    id: Date.now(),
                    name: userData.name || 'Usuário',
                    email: userData.email,
                    time: now.toLocaleTimeString('pt-MZ'),
                    date: today,
                    cvCount: userData.cvCount || 0
                });
                
                // Manter apenas os 50 logins mais recentes
                if (this.stats.recentLogins.length > 50) {
                    this.stats.recentLogins = this.stats.recentLogins.slice(0, 50);
                }
                
                // Atualizar dados por hora
                const currentHour = now.getHours();
                this.stats.hourlyAccess[currentHour].count++;
                
                // Salvar estatísticas
                this.saveStats();
                
                return true;
            }

            // Registrar criação de CV
            registerCVCreation() {
                this.stats.totalCVs++;
                this.saveStats();
            }

            // Calcular taxa de engajamento
            calculateEngagementRate() {
                if (this.stats.totalUsers === 0) return 0;
                
                const activeUsers = this.stats.recentLogins
                    .filter(login => {
                        const loginDate = new Date(login.date);
                        const today = new Date();
                        const diffTime = Math.abs(today - loginDate);
                        const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                        return diffDays <= 7; // Usuários ativos na última semana
                    })
                    .length;
                
                return Math.round((activeUsers / this.stats.totalUsers) * 100);
            }

            // Atualizar todas as estatísticas
            updateAllStats() {
                this.stats.engagementRate = this.calculateEngagementRate();
                
                // Simular crescimento (em produção viria de comparação com dados anteriores)
                this.stats.userGrowth = Math.floor(Math.random() * 10) + 1;
                this.stats.cvGrowth = Math.floor(Math.random() * 5) + 1;
                this.stats.activeChange = Math.floor(Math.random() * 5) + 1;
                this.stats.engagementChange = Math.floor(Math.random() * 3) + 1;
                
                this.saveStats();
                return this.stats;
            }

            // Salvar estatísticas
            saveStats() {
                localStorage.setItem('excellentcv_admin_stats', JSON.stringify(this.stats));
            }

            // Exportar dados
            exportData() {
                const dataStr = JSON.stringify(this.stats, null, 2);
                const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
                
                const exportFileDefaultName = `excellentcv_stats_${new Date().toISOString().split('T')[0]}.json`;
                
                const linkElement = document.createElement('a');
                linkElement.setAttribute('href', dataUri);
                linkElement.setAttribute('download', exportFileDefaultName);
                linkElement.click();
                
                return true;
            }

            // Limpar dados antigos (mantém apenas últimos 30 dias)
            clearOldData() {
                const thirtyDaysAgo = new Date();
                thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);
                
                this.stats.recentLogins = this.stats.recentLogins.filter(login => {
                    const loginDate = new Date(login.date);
                    return loginDate >= thirtyDaysAgo;
                });
                
                this.saveStats();
                return true;
            }

            // Verificar credenciais admin
            checkAdminCredentials(username, password) {
                const savedCredentials = JSON.parse(localStorage.getItem('excellentcv_admin_credentials'));
                return savedCredentials.username === username && savedCredentials.password === password;
            }

            // Atualizar credenciais admin
            updateAdminCredentials(newUsername, newPassword) {
                const newCredentials = {
                    username: newUsername,
                    password: newPassword
                };
                localStorage.setItem('excellentcv_admin_credentials', JSON.stringify(newCredentials));
                return true;
            }
        }

        // Inicialização quando o DOM estiver carregado
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar tracker
            window.adminTracker = new AdminTracker();
            
            // Configurar eventos do painel admin
            setupAdminPanel();
            
            // Configurar eventos principais
            setupMainEvents();
            
            // Registrar acesso atual (simulação de usuário)
            simulateUserActivity();
        });

        // Configurar painel administrativo
        function setupAdminPanel() {
            const adminAccessBtn = document.getElementById('admin-access-btn');
            const adminLoginModal = document.getElementById('admin-login-modal');
            const adminLoginBtn = document.getElementById('admin-login-btn');
            const adminLogoutBtn = document.getElementById('admin-logout-btn');
            const adminPanel = document.getElementById('admin-panel');
            const mainContent = document.getElementById('main-content');
            const refreshStatsBtn = document.getElementById('refresh-stats-btn');
            const exportDataBtn = document.getElementById('export-data-btn');
            const clearDataBtn = document.getElementById('clear-data-btn');
            const adminUsernameInput = document.getElementById('admin-username');
            const adminPasswordInput = document.getElementById('admin-password');
            
            // Mostrar/ocultar modal de login admin
            adminAccessBtn.addEventListener('click', function() {
                adminLoginModal.classList.add('active');
                document.body.style.overflow = 'hidden';
            });
            
            // Fechar modal ao clicar fora
            adminLoginModal.addEventListener('click', function(e) {
                if (e.target === adminLoginModal) {
                    closeAdminLogin();
                }
            });
            
            // Fechar modal com ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && adminLoginModal.classList.contains('active')) {
                    closeAdminLogin();
                }
            });
            
            // Tentar login admin
            adminLoginBtn.addEventListener('click', function() {
                const username = adminUsernameInput.value.trim();
                const password = adminPasswordInput.value.trim();
                
                if (!username || !password) {
                    showNotification('Por favor, preencha todos os campos.', 'error');
                    return;
                }
                
                if (window.adminTracker.checkAdminCredentials(username, password)) {
                    // Login bem-sucedido
                    closeAdminLogin();
                    showNotification('Acesso CEO concedido!', 'success');
                    
                    // Mostrar painel admin
                    adminPanel.classList.add('active');
                    mainContent.style.display = 'none';
                    
                    // Atualizar estatísticas
                    updateAdminStats();
                    
                    // Esconder botão flutuante
                    adminAccessBtn.style.display = 'none';
                } else {
                    showNotification('Credenciais inválidas. Acesso restrito ao CEO.', 'error');
                }
            });
            
            // Logout do painel admin
            adminLogoutBtn.addEventListener('click', function() {
                adminPanel.classList.remove('active');
                mainContent.style.display = 'block';
                adminAccessBtn.style.display = 'flex';
                showNotification('Saiu do painel CEO.', 'success');
            });
            
            // Atualizar estatísticas
            refreshStatsBtn.addEventListener('click', function() {
                updateAdminStats();
                showNotification('Estatísticas atualizadas!', 'success');
            });
            
            // Exportar dados
            exportDataBtn.addEventListener('click', function() {
                if (window.adminTracker.exportData()) {
                    showNotification('Dados exportados com sucesso!', 'success');
                }
            });
            
            // Limpar dados antigos
            clearDataBtn.addEventListener('click', function() {
                if (confirm('Tem certeza que deseja limpar dados com mais de 30 dias? Esta ação não pode ser desfeita.')) {
                    if (window.adminTracker.clearOldData()) {
                        updateAdminStats();
                        showNotification('Dados antigos removidos.', 'success');
                    }
                }
            });
            
            // Permitir login com Enter
            adminPasswordInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    adminLoginBtn.click();
                }
            });
            
            function closeAdminLogin() {
                adminLoginModal.classList.remove('active');
                document.body.style.overflow = 'auto';
                adminUsernameInput.value = '';
                adminPasswordInput.value = '';
            }
        }

        // Atualizar estatísticas no painel
        function updateAdminStats() {
            const stats = window.adminTracker.updateAllStats();
            
            // Atualizar números
            document.getElementById('total-users').textContent = stats.totalUsers;
            document.getElementById('active-today').textContent = stats.activeToday;
            document.getElementById('total-cvs').textContent = stats.totalCVs;
            document.getElementById('engagement-rate').textContent = stats.engagementRate + '%';
            
            // Atualizar mudanças
            document.getElementById('user-growth').textContent = `+${stats.userGrowth} hoje`;
            document.getElementById('cv-growth').textContent = `+${stats.cvGrowth} esta semana`;
            document.getElementById('active-change').textContent = `+${stats.activeChange}%`;
            document.getElementById('engagement-change').textContent = `+${stats.engagementChange}%`;
            
            // Atualizar tabela de usuários recentes
            updateRecentUsersTable(stats.recentLogins.slice(0, 10));
        }

        // Atualizar tabela de usuários recentes
        function updateRecentUsersTable(users) {
            const tableBody = document.getElementById('recent-users-table');
            tableBody.innerHTML = '';
            
            if (users.length === 0) {
                tableBody.innerHTML = `
                    <tr>
                        <td colspan="5" style="text-align: center; padding: 40px; color: var(--text-light);">
                            <i class="fas fa-user-clock" style="font-size: 40px; margin-bottom: 15px; display: block;"></i>
                            <p>Nenhum usuário registrado ainda.</p>
                        </td>
                    </tr>
                `;
                return;
            }
            
            users.forEach(user => {
                const row = document.createElement('tr');
                
                // Criar iniciais para o avatar
                const nameParts = user.name.split(' ');
                const initials = nameParts.map(part => part[0]).join('').toUpperCase().substring(0, 2);
                
                row.innerHTML = `
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div class="user-avatar-small">${initials}</div>
                            <div>
                                <div style="font-weight: 500;">${user.name}</div>
                                <div style="font-size: 0.8rem; color: var(--text-light);">ID: ${user.id}</div>
                            </div>
                        </div>
                    </td>
                    <td>${user.email}</td>
                    <td>
                        <div>${user.date}</div>
                        <div style="font-size: 0.8rem; color: var(--text-light);">${user.time}</div>
                    </td>
                    <td>${user.cvCount}</td>
                    <td>
                        <span class="status-badge status-active">Ativo</span>
                    </td>
                `;
                
                tableBody.appendChild(row);
            });
        }

        // Simular atividade de usuários (para demonstração)
        function simulateUserActivity() {
            // Simular alguns usuários iniciais
            const sampleUsers = [
                { name: 'Maria João', email: 'maria.joao@email.com', cvCount: 3 },
                { name: 'Carlos Silva', email: 'carlos.silva@email.com', cvCount: 1 },
                { name: 'Ana Mondlane', email: 'ana.mondlane@email.com', cvCount: 2 },
                { name: 'José Machava', email: 'jose.machava@email.com', cvCount: 0 },
                { name: 'Fatima Hassan', email: 'fatima.hassan@email.com', cvCount: 1 }
            ];
            
            // Registrar alguns usuários iniciais se for a primeira vez
            if (window.adminTracker.stats.totalUsers === 0) {
                sampleUsers.forEach(user => {
                    window.adminTracker.registerUserLogin(user);
                });
                
                // Adicionar alguns CVs
                window.adminTracker.stats.totalCVs = 7;
            }
            
            // Simular novo usuário ocasionalmente (apenas para demonstração)
            setTimeout(() => {
                if (Math.random() > 0.7) { // 30% de chance
                    const newUser = {
                        name: 'Novo Usuário ' + Date.now().toString().slice(-4),
                        email: `user${Date.now().toString().slice(-6)}@email.com`,
                        cvCount: Math.floor(Math.random() * 2)
                    };
                    
                    window.adminTracker.registerUserLogin(newUser);
                    
                    // Se tiver CVs, registrar
                    if (newUser.cvCount > 0) {
                        for (let i = 0; i < newUser.cvCount; i++) {
                            window.adminTracker.registerCVCreation();
                        }
                    }
                }
            }, 5000);
        }

        // Configurar eventos principais
        function setupMainEvents() {
            // Rolar suavemente para seções
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    const href = this.getAttribute('href');
                    if (href === '#') return;
                    
                    e.preventDefault();
                    const targetId = href.substring(1);
                    scrollToSection(targetId);
                });
            });
            
            // Menu mobile
            const mobileBtn = document.getElementById('mobile-menu-btn');
            const navMenu = document.getElementById('nav-menu');
            
            mobileBtn.addEventListener('click', function() {
                navMenu.classList.toggle('active');
                mobileBtn.innerHTML = navMenu.classList.contains('active') 
                    ? '<i class="fas fa-times"></i>' 
                    : '<i class="fas fa-bars"></i>';
            });
            
            // Botões de login/registro
            document.getElementById('login-btn')?.addEventListener('click', function() {
                showNotification('Redirecionando para login...', 'success');
            });
            
            document.getElementById('register-btn')?.addEventListener('click', function() {
                showNotification('Redirecionando para registro...', 'success');
            });
            
            document.getElementById('hero-register-btn')?.addEventListener('click', function() {
                showNotification('Iniciando criação de conta...', 'success');
            });
        }

        // Função para rolar para seção
        function scrollToSection(sectionId) {
            if (!sectionId) {
                window.scrollTo({ top: 0, behavior: 'smooth' });
                return;
            }
            
            const section = document.getElementById(sectionId);
            if (section) {
                const headerHeight = document.querySelector('.header').offsetHeight;
                const sectionTop = section.offsetTop - headerHeight - 20;
                
                window.scrollTo({
                    top: sectionTop,
                    behavior: 'smooth'
                });
            }
            
            // Fechar menu mobile se estiver aberto
            const navMenu = document.getElementById('nav-menu');
            const mobileBtn = document.getElementById('mobile-menu-btn');
            if (navMenu.classList.contains('active')) {
                navMenu.classList.remove('active');
                mobileBtn.innerHTML = '<i class="fas fa-bars"></i>';
            }
        }

        // Mostrar notificação
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            const notificationText = document.getElementById('notification-text');
            
            let icon = 'fa-check-circle';
            if (type === 'error') icon = 'fa-exclamation-circle';
            if (type === 'warning') icon = 'fa-exclamation-triangle';
            
            notificationText.textContent = message;
            notification.className = `notification ${type} show`;
            notification.innerHTML = `<i class="fas ${icon}"></i> <span id="notification-text">${message}</span>`;
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 4000);
        }

        // Registrar atividade quando usuários interagem (simulação)
        document.addEventListener('click', function(e) {
            // Registrar interações significativas
            if (e.target.matches('.btn-primary, .btn-secondary, .btn-accent, .btn-outline')) {
                // Esta função pode ser expandida para registrar ações específicas
                console.log('Interação registrada:', e.target.textContent);
            }
        });
    </script>
</body>
</html>
